<?xml version="1.0"?>
<robot name="goal" xmlns:xacro="http://www.ros.org/wiki/xacro">
    
  <link name="world"/>

  <joint name="fixed" type="fixed">
    <parent link="world"/>
    <child link="goal"/>
  </joint>

  <link name="goal">
    <collision>
      <origin xyz="6 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0001" length="0.0001"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="6 0 0.05" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.8" length="0.1"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
      </inertial>
  </link>

  <joint name="fixed1" type="fixed">
    <parent link="world"/>
    <child link="range"/>
  </joint>

  <link name="range">
    <collision>
      <origin xyz="6 0.01 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.0001" length="0.0001"/>
      </geometry>
    </collision>

    <visual>
      <origin xyz="6 0.01 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="12" length="0.05"/>
      </geometry>
    </visual>

    <inertial>
      <origin xyz="0 0 1" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia
        ixx="1.0" ixy="0.0" ixz="0.0"
        iyy="1.0" iyz="0.0"
        izz="1.0"/>
      </inertial>
  </link>

  <gazebo reference="goal">  
    <visual>  
      <material>  
        <ambient>0 0.5 0 0.1</ambient>  
        <diffuse>0.46 0.46 0.46 0.5</diffuse>  
        <specular>0.5 0.5 0.5 32</specular>  
        <emissive>0.46 0.46 0.46 0.5</emissive>  
      </material>  
    </visual>  
  </gazebo>

  <gazebo reference="range">  
    <visual>  
      <material>  
        <ambient>0.3 0.3 0.7 0.1</ambient>  
        <diffuse>0.46 0.46 0.46 0.5</diffuse>  
        <specular>0.5 0.5 0.5 8</specular>  
        <emissive>0.46 0.46 0.46 0.1</emissive>  
      </material>  
    </visual>  
  </gazebo>

</robot>
